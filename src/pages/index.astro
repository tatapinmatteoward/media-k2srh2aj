---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Home - Media Maven Blog";
const pageDescription = "Unlock expert publicity strategies for businesses and brands. Explore insightful articles, tips, and trends from Media Maven Blog to elevate your media presence.";

const featuredPosts = [
  {
    id: 1,
    title: "The Art of Crafting Compelling Press Releases",
    excerpt: "Learn how to create press releases that capture attention and drive media coverage.",
    date: "May 15, 2023",
    readTime: "5 min read"
  },
  {
    id: 2,
    title: "Social Media Algorithms Explained",
    excerpt: "Demystify how social platforms decide what contentToShow you and your audience.",
    date: "June 2, 2023",
    readTime: "7 min read"
  },
  {
    id: 3,
    title: "Building Strong Media Relationships",
    excerpt: "Essential tips for cultivating lasting relationships with journalists and influencers.",
    date: "June 18, 2023",
    readTime: "6 min read"
  }
];

const benefits = [
  {
    icon: "fas fa-chart-line",
    title: "Proven Expertise",
    description: "Backed by years of industry experience in PR, marketing, and media relations."
  },
  {
    icon: "fas fa-lightbulb",
    title: "Practical Advice",
    description: "From crafting compelling press releases to navigating social media algorithms."
  },
  {
    icon: "fas fa-user-check",
    title: "Tailored for You",
    description: "Strategies designed for startups, established brands, and everything in between."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-[#ff6b6b] via-[#ff8e8e] to-[#ff6b6b] py-20 md:py-32">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSI2MCIgaGVpZ2h0PSI2MCIgdmlld0JveD0iMCAwIDIwIDIwIj48Y2lyY2xlIGN4PSIxMCIgY3k9IjEwIiByPSIzIiBmaWxsPSIjZmZmZmZmIi8+PC9zdmc+')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Welcome to Media Maven Blog
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-10 font-medium">
          Expert Publicity Strategies for Businesses and Brands
        </p>
        <p class="text-lg text-white/80 max-w-2xl mx-auto mb-12">
          In today's fast-paced digital world, standing out requires more than just a great productâ€”it's about masterful storytelling and strategic media engagement. At Media Maven Blog, we demystify the art of publicity, offering actionable insights to help your business shine.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-white text-[#ff6b6b] font-bold rounded-full hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl">
            Explore Articles
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-all duration-300">
            Subscribe Now
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Why Choose Media Maven?</h2>
        <div class="w-24 h-1 bg-[#fbbf24] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {benefits.map((benefit, index) => (
          <div key={index} class="bg-gray-50 p-8 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
            <div class="w-16 h-16 rounded-full bg-[#ff6b6b]/10 flex items-center justify-center mb-6">
              <i class={`${benefit.icon} text-2xl text-[#ff6b6b]`}></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Insights -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Latest Insights</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">Discover our most recent posts packed with tips to boost your brand's visibility</p>
        <div class="w-24 h-1 bg-[#fbbf24] mx-auto mt-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredPosts.map((post) => (
          <article key={post.id} class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="h-48 bg-gradient-to-r from-[#ff6b6b] to-[#fbbf24] flex items-center justify-center">
              <i class="fas fa-file-alt text-white text-5xl"></i>
            </div>
            <div class="p-6">
              <div class="flex justify-between text-sm text-gray-500 mb-3">
                <span>{post.date}</span>
                <span>{post.readTime}</span>
              </div>
              <h3 class="text-xl font-bold text-gray-800 mb-3">{post.title}</h3>
              <p class="text-gray-600 mb-4">{post.excerpt}</p>
              <button class="text-[#ff6b6b] font-bold flex items-center group">
                Read More
                <i class="fas fa-arrow-right ml-2 text-sm group-hover:translate-x-1 transition-transform"></i>
              </button>
            </div>
          </article>
        ))}
      </div>

      <div class="text-center mt-12">
        <button class="px-8 py-3 bg-[#ff6b6b] text-white font-bold rounded-full hover:bg-[#ff5252] transition-colors duration-300">
          View All Articles
        </button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#ff6b6b] to-[#fbbf24]">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Elevate Your Media Presence?</h2>
      <p class="text-white/90 max-w-2xl mx-auto mb-10 text-lg">
        Join thousands of businesses already leveraging our expert strategies to grow their brand reach.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-white text-[#ff6b6b] font-bold rounded-full hover:bg-gray-100 transition-all duration-300 transform hover:-translate-y-1 shadow-lg">
          Get Started Today
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white/10 transition-all duration-300">
          Schedule a Consultation
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .gradient-border {
    position: relative;
    border-radius: 1rem;
  }

  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff6b6b, #fbbf24, #ff6b6b);
    border-radius: 1.25rem;
    z-index: -1;
    animation: gradientShift 3s linear infinite;
    background-size: 200% 200%;
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Custom scroll for better visual appeal */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }

  ::-webkit-scrollbar-thumb {
    background: #ff6b6b;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #ff5252;
  }
</style>